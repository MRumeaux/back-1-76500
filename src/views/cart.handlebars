<h2>Carrito</h2>

{{#if products.length}}
    <table class="cart-table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
        {{#each products}}
            <tr>
                <td>{{product.title}}</td>
                <td>$ {{product.price}}</td>
                <td>{{quantity}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <div class="cart-actions">
        <a class="btn btn-secondary" href="/products">Seguir comprando</a>
    </div>
{{else}}
    <p>El carrito está vacío</p>
    <a class="btn btn-secondary" href="/products">Volver a productos</a>
{{/if}}